<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lightblue_500</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="FragmentPaneStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/pink_200</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CodePaneStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/lightgreen</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="LogPaneStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lightblue</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:scrollbars">horizontal|vertical</item>
    </style>
</resources>
