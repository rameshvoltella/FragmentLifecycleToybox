<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:padding="15dp"
    >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_500"
            >
            <include layout="@layout/buttonset" android:id="@+id/buttonset1"/>
            <include layout="@layout/buttonset" android:id="@+id/buttonset2"/>
            <include layout="@layout/buttonset" android:id="@+id/buttonset3"/>
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_500"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:id="@+id/container_top"
            >
            <Button
                style="@style/SharedStyle.ButtonStyle"
                android:id="@+id/button_toggle_reset"
                android:text="Reset"
                android:onClick="buttonReset"
                />
            <Button
                style="@style/SharedStyle.ButtonStyle"
                android:id="@+id/button_toggle_print_state"
                android:text="Print State"
                android:onClick="buttonPrintState"
                />
            <Button
                style="@style/SharedStyle.ButtonStyle"
                android:id="@+id/button_toggle_lamt"
                android:onClick="buttonToggleLmTracing"
                />
            <TextView
                style="@style/SharedStyle.CodePaneStyle"
                android:hint="code hints will appear here"
                android:id="@+id/code_pane"
                />
            <com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout
                style="@style/SharedStyle.FragmentPaneStyle"
                android:id="@+id/container1"
                >
            </com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout>
            <com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout
                style="@style/SharedStyle.FragmentPaneStyle"
                android:id="@+id/container2"
                >
            </com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout>
            <com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout
                style="@style/SharedStyle.FragmentPaneStyle"
                android:id="@+id/container3"
                >
                <!-- Comment out the following to turn off the static fragment traces. -->
                <fragment
                    class="com.barryholroyd.fragmentlifecycletoybox.MyFragmentStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="FragTag3"
                    android:id="@+id/my_fragment_static"
                    >
                </fragment>
            </com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout>
        </com.barryholroyd.fragmentlifecycletoybox.FldLinearLayout>
    </HorizontalScrollView>
    <TextView
        style="@style/LogPaneStyle"
        android:layout_marginTop="15dp"
        android:id="@+id/log_pane"
    />
</LinearLayout>
