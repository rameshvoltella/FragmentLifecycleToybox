<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/buttonset"
    >
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Create"
        android:onClick="buttonCreateFragment"
        android:id="@+id/button_create"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Retain Instance"
        android:onClick="buttonRetainInstance"
        android:id="@+id/button_toggle_retain_instance"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Add (ViewInCntnr)"
        android:id="@+id/button_add_with_view"
        android:onClick="buttonAddFragmentWithView"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Add (! ViewInCntnr)"
        android:id="@+id/button_add_without_view"
        android:onClick="buttonAddFragmentWithoutView"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Remove"
        android:id="@+id/button_remove"
        android:onClick="buttonRemoveFragment"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Replace"
        android:id="@+id/button_replace"
        android:onClick="buttonReplaceFragment"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Detach"
        android:id="@+id/button_detach"
        android:onClick="buttonDetachFragment"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Attach"
        android:id="@+id/button_attach"
        android:onClick="buttonAttachFragment"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Hide"
        android:id="@+id/button_hide"
        android:onClick="buttonHideFragment"
        />
    <Button
        style="@style/SharedStyle.ButtonStyle"
        android:text="Show"
        android:id="@+id/button_show"
        android:onClick="buttonShowFragment"
        />
</LinearLayout>
